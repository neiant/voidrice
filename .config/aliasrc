# browser open
bo() {
	# if >1 item to open, open all in new window
	if test $# -gt 1; then
		"$BROWSER"
	fi

	while test $# -gt 0; do
		FILEPATH="$(realpath "$1")"
		shift
		"$BROWSER" file://"$FILEPATH"
	done
}

